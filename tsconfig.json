{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "esnext",
    "module": "esnext",
    "lib": ["es2015", "es2016", "es2017", "dom", "esnext"],
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declarationDir": "dist/types",
    "noImplicitAny": false,
    "outDir": "dist",
    "typeRoots": [
      "node_modules/@types",
      "dist/types"
    ]
  },
  "include": ["src"]
}
